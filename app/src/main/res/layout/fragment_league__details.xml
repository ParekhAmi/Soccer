        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_team_btn"
                android:background="@color/colorErroronAuth"
                android:textColor="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:text="Add Team"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/remove_team_btn"
                android:background="@color/colorErroronAuth"
                android:textColor="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:text="Remove Team"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_new_league_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/team_list_btn"
                android:background="@color/colorErroronAuth"
                android:textColor="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:text="Team List"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_league_no_of_teams_edt_txt"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/upcoming_matches_btn"
                android:background="@color/colorErroronAuth"
                android:textColor="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:text="Upcoming Matches"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_new_league_btn"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/schedule_match_btn"
                android:background="@color/colorErroronAuth"
                android:textColor="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:text="Schedule Match"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_league_no_of_teams_edt_txt"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/played_match_btn"
                android:background="@color/colorErroronAuth"
                android:textColor="@color/colorPrimary"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:layout_margin="16dp"
                android:text="Played Match"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/create_new_league_btn"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>



