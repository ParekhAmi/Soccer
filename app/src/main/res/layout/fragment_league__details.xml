<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:background="@color/colorGrey"
    android:orientation="vertical"
    tools:context=".Create_League">


    <TextView
        android:id="@+id/League_Functions"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="League Name"
        android:background="@color/splash"
        android:textColor="@android:color/white"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/createLeague_img"
        tools:layout_editor_absoluteY="16dp"/>


    <Button
        android:id="@+id/add_team_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:text="Add Team"
        android:layout_marginEnd="140dp"
        app:layout_constraintEnd_toEndOf="@id/remove_team_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/team_list_btn"
        app:layout_constraintTop_toBottomOf="@+id/League_Functions"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/remove_team_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="140dp"
        android:text="Remove Team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/add_team_btn"
        app:layout_constraintBottom_toTopOf="@id/upcoming_matches_btn"
        app:layout_constraintTop_toBottomOf="@+id/League_Functions"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/team_list_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginEnd="140dp"
        android:text="Team List"
        app:layout_constraintEnd_toEndOf="@id/upcoming_matches_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/schedule_match_btn"
        app:layout_constraintTop_toBottomOf="@+id/add_team_btn"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/upcoming_matches_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="140dp"
        android:text="Upcoming Matches"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/team_list_btn"
        app:layout_constraintBottom_toTopOf="@id/played_match_btn"
        app:layout_constraintTop_toBottomOf="@+id/remove_team_btn"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/schedule_match_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginEnd="140dp"
        android:text="Schedule Match"
        app:layout_constraintEnd_toEndOf="@id/played_match_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_list_btn"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/played_match_btn"
        android:layout_width="120dp"
        android:layout_height="140dp"
        android:layout_marginStart="140dp"
        android:text="Played Match"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/schedule_match_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upcoming_matches_btn"
        android:background="@color/colorText"
        android:textColor="@color/colorPrimaryDark"/>

</androidx.constraintlayout.widget.ConstraintLayout>
